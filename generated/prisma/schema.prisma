generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario   String            @id @default(uuid())
  nome         String
  email        String            @unique
  senha        String
  id_faculdade String
  faculdade    Faculdade         @relation(fields: [id_faculdade], references: [id_faculdade])
  acertos      Usuario_Acertos[]

  @@map("usuario")
}

model Faculdade {
  id_faculdade       String              @id @default(uuid())
  nome               String
  endereco           String
  usuarios           Usuario[]
  faculdadesEmpresas Faculdade_Empresa[]
  perguntas          Pergunta[]

  @@map("faculdade")
}

model Faculdade_Empresa {
  id_faculdade_ String    @id @default(uuid())
  id_faculdade  String
  id_empresa    String
  faculdade     Faculdade @relation(fields: [id_faculdade], references: [id_faculdade])

  @@map("faculdade_empresa")
}

model Pergunta {
  id_pergunta    String            @id @default(uuid())
  id_faculdade   String
  enunciado      String
  data_criação DateTime
  opcoes         OpcaoResposta[]
  acertos        Usuario_Acertos[]
  faculdade      Faculdade?        @relation(fields: [id_faculdade], references: [id_faculdade])

  @@map("pergunta")
}

model OpcaoResposta {
  id_opcao_resposta String   @id @default(uuid())
  id_pergunta       String
  texto_resposta    String
  correta           Boolean
  pergunta          Pergunta @relation(fields: [id_pergunta], references: [id_pergunta])

  @@map("opcaoresposta")
}

model Usuario_Acertos {
  id_usuario_acerto String   @id @default(uuid())
  id_usuario        String
  id_pergunta       String
  usuario           Usuario  @relation(fields: [id_usuario], references: [id_usuario])
  pergunta          Pergunta @relation(fields: [id_pergunta], references: [id_pergunta])

  @@map("usuario_acertos")
}
